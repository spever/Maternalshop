<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <subzero.pnikosis.ProgressWheel
        android:id="@+id/pw"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerInParent="true"
        app:matProg_barColor="#1FBCD9"
        app:matProg_barSpinCycleTime="500"
        app:matProg_barWidth="5dip"
        app:matProg_circleRadius="40dip"
        app:matProg_fillRadius="true"
        app:matProg_linearProgress="true"
        
        app:matProg_progressIndeterminate="true"
        app:matProg_rimColor="#CFD8DC"
        app:matProg_rimWidth="3dip"
        app:matProg_spinSpeed="1.0" />

</RelativeLayout>