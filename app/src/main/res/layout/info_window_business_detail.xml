<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg9_infowin"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:id="@+id/layout_shop_detail"
    android:paddingTop="16dp"
    tools:ignore="HardcodedText" >

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="母婴店名称"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_toLeftOf="@+id/iv_shop_detail"
        android:ellipsize="none"
        android:gravity="left"
        android:singleLine="true"
        android:text="内容"
        android:textColor="#FFFFFF" />

    <com.subzero.common.view.CheckImageView
        android:id="@+id/iv_shop_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingBottom="10dp"
        android:paddingRight="8dp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        app:civ_imageResNormal="@drawable/ic_map_goto_normal"
        app:civ_imageResSelected="@drawable/ic_map_goto_selected" />

    <TextView
        android:id="@+id/tv_sale_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_shop_detail"
        android:ellipsize="none"
        android:maxEms="10"
        android:singleLine="true"
        android:text="月销0笔"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tv_evaluate_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_shop_detail"
        android:layout_toRightOf="@+id/tv_sale_count"
        android:ellipsize="none"
        android:gravity="right"
        android:maxEms="10"
        android:paddingRight="8dp"
        android:singleLine="true"
        android:text="评论0"
        android:textColor="#FFFFFF" />

</RelativeLayout>