<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/subzero_bg_main_gray"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:ignore="HardcodedText" >

    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <View
            android:id="@+id/line_top_margin0"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray" />

        <View
            android:id="@+id/line_top_margin16"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:background="@color/line_gray"
            android:visibility="gone" />
    </FrameLayout>

    <RelativeLayout
        style="@style/layout_fragment_mine_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" >

        <TextView
            android:id="@+id/tv"
            style="@style/tv_fragment_mine_item"
            android:background="@drawable/selector_group_white_gray"
            android:drawableRight="@drawable/selected_view_arrow_right"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="关于我们"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/line_last"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray" />

</LinearLayout>