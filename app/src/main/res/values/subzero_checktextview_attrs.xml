<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CheckTextView">

        <!-- CheckTextView的背景色（常态） -->
        <attr name="ctv_backgroundResNormal" format="reference" />
        <!-- CheckTextView的背景色（被选中） -->
        <attr name="ctv_backgroundResSelected" format="reference" />
        <!-- CheckTextView的字体色（常态） -->
        <attr name="ctv_textColorNormal" format="color|reference" />
        <!-- CheckTextView的字体色（被选中） -->
        <attr name="ctv_textColorSelected" format="color|reference" />
        <!-- CheckTextView的字体大小（常态） -->
        <attr name="ctv_textSizeNormal" format="dimension|reference" />
        <!-- CheckTextView的字体大小（被选中） -->
        <attr name="ctv_textSizeSelected" format="dimension|reference" />
        <!-- CheckTextView的选中状态（被选中？） -->
        <attr name="ctv_isChecked" format="boolean" />
        <!-- CheckTextView 保持点击后的状态 -->
        <attr name="ctv_isKeepClickEffect" format="boolean" />
    </declare-styleable>

</resources>